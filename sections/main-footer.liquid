{{ 'section-main-footer.css' | asset_url | stylesheet_tag }}
{% liquid 
  assign color_scheme = section.settings.color_scheme
  assign copyright_text = section.settings.copyright_text
  assign logo = section.settings.logo | default: settings.logo
  assign enable_socials = section.settings.enable_socials
  assign payment_enable = section.settings.payment_enable
%}
{% render 'section-paddings', 
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top_mobile: section.settings.padding_top_mobile,
  padding_bottom_mobile: section.settings.padding_bottom_mobile
%}

<div class="color-{{ color_scheme }}">
  <div class="main-footer__container page-width section-{{ section.id }}--padding">

    <div class="main-footer__content">

      <div class="main-footer__logo-container">
        {% if logo != blank %}
          <div class="main-footer__logo">
            {{ logo | image_url: width: 1000 | image_tag: alt: logo.alt }}
          </div>
        {% endif %}
        {% if enable_socials != blank %}
          <div class="main-footer__socials">
            {% render 'social-icons' %}
          </div>
        {% endif %}
      </div>

      <div class="main-footer__group">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'link-list' %}
              {% assign link_list = block.settings.link_list %}
              {% if link_list != blank %}
                <div class="main-footer__list-container" {{ block.shopify_attributes }}>
                  <h3 class="h4 main-footer__list-title">{{ link_list.title }}</h3>
                  <ul class="main-footer__list list-unstyled">
                    {% for link in link_list.links %}
                      <li class="main-footer__item">
                        <a href="{{ link.url }}" class="main-footer__link">{{ link.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>
    </div>

    <div class="main-footer__info">
      {% if copyright_text != blank %}
        <div class="main-footer__copyright">
          <p class="main-footer__copyright-text main-footer__copyright-text--desktop">{{ copyright_text }}</p>
        </div>
      {% endif %}
      {%- if payment_enable -%}
        <div class="main-footer__payment footer__payment">
          <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
          {% if section.settings.payment_icons != blank %}
            {{ section.settings.payment_icons | image_url: width: 400 | image_tag: class: 'payment-icon' }}
          {% endif %}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "settings": [
     {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section's space between"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 56,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 24,
      "unit": "px",
      "label": "Padding Bottom"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 40,
      "unit": "px",
      "label": "Padding Top Mobile"
    }, {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 24,
      "unit": "px",
      "label": "Padding Bottom Mobile"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo",
      "info": "Default Store Logo"
    },
    {
      "type": "checkbox",
      "id": "enable_socials",
      "label": "Enable Social Links",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "payment_enable",
      "label": "Enable Payments",
      "default": false
    },
    {
      "type": "text",
      "id": "notice_text",
      "label": "Notice Text"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Desktop"
    },
    {
      "type": "image_picker",
      "id": "payment_icons",
      "label": "Payment icons"
    }
  ],
  "blocks": [
    {
      "type": "link-list",
      "name": "Link List",
      "settings": [
        {
          "type": "link_list",
          "id": "link_list",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "social",
      "name": "Social",
      "limit": 1
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}