{{ 'section-banner-text-with-image.css' | asset_url | stylesheet_tag }}
{{ 'component-running-line.css'  | asset_url | stylesheet_tag }}


{% liquid
  assign badge = section.settings.badge_text
  assign heading = section.settings.heading
  assign text = section.settings.text
  assign bottom_text = section.settings.bottom_text
  assign button_text = section.settings.button_text
  assign button_url = section.settings.button_url
  assign rating_text = section.settings.rating_text
  assign use_sticky = section.settings.use_sticky
%}

{% render 'section-paddings',
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top_mobile: section.settings.padding_top_mobile,
  padding_bottom_mobile: section.settings.padding_bottom_mobile
%}

<div class="section-{{ section.id }}--padding color-{{ section.settings.color_scheme }} gradient">
  <div class="banner-image-with-text page-width">
    <div class="banner-image-with-text__grid{% if section.settings.layout == 'text_first' %} banner-image-with-text__grid--reverse{% endif %}">
      <div class="banner-image-with-text__media-item">
        <div class="banner-image-with-text__media">
          {%- if section.settings.image != blank -%}
            {% render 'picture',
              image: section.settings.image,
              image_mobile: section.settings.image_mobile,
              media_request: 650,
              widths_list: '800',
              loading: 'lazy',
              fetchpriority: 'low',
              class: 'image'
            %}
          {%- else -%}
            {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      </div>
      <div class="banner-image-with-text__text-item">
        <div class="banner-image-with-text__content">
          {% if badge != blank %}
            <div class="banner-image-with-text__badge">
              {{- 'icon-homepage-star.svg' | inline_asset_content -}}
              {{ badge }}
            </div>
          {% endif %}
          {% if heading != blank %}
            <div class="banner-image-with-text__heading">
              {{ heading }}
            </div>
          {% endif %}

          {% if text != blank %}
            <div class="banner-image-with-text__text">
              {{ text }}
            </div>
          {% endif %}
          {%- if button_text != blank and button_url != blank -%}
            <a href="{{ button_url }}" class="button">
              {{- 'icon-homepage-heart.svg' | inline_asset_content -}}
              {{ button_text | escape }}
            </a>
          {%- endif -%}
            {% if rating_text != blank %}
            <div class="banner-image-with-text__rating_text">
              {{- 'icon-rating.svg' | inline_asset_content -}}
              {{ rating_text }}
            </div>
          {% endif %}
          {% if section.settings.badge_text_image_1 or section.settings.badge_text_image_2 %}
            <div class="banner-image-with-text__badges">
              {% if section.settings.badge_text_image_1 %}
                <div class="banner-image-with-text__badge-item">
                  <img
                    src="{{ section.settings.badge_text_image_1 | image_url: width: 80 }}"
                    alt="{{ section.settings.badge_text_1 | escape }}"
                    class="banner-image-with-text__badge-image"
                    loading="lazy"
                  >
                  {% if section.settings.badge_text_1 != blank %}
                    <span class="banner-image-with-text__badge-text">
                      {{ section.settings.badge_text_1 }}
                    </span>
                  {% endif %}
                </div>
              {% endif %}

              {% if section.settings.badge_text_image_2 %}
                <div class="banner-image-with-text__badge-item">
                  <img
                    src="{{ section.settings.badge_text_image_2 | image_url: width: 80 }}"
                    alt="{{ section.settings.badge_text_2 | escape }}"
                    class="banner-image-with-text__badge-image"
                    loading="lazy"
                  >
                  {% if section.settings.badge_text_2 != blank %}
                    <span class="banner-image-with-text__badge-text">
                      {{ section.settings.badge_text_2 }}
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          {% endif %}
          {% if bottom_text != blank %}
            <div class="banner-image-with-text__bottom_text">
              {{ bottom_text }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% capture content %}
    {% for block in section.blocks %}
      {% if block.settings.image != blank %}
        <div>
          {{ block.settings.image | image_url: width: 500 | image_tag }}
        </div>
      {% endif %}
    {% endfor %}
  {% endcapture %}

  {% render 'running-line',
    content: content,
    duration: 15
  %}

  {% if use_sticky == true %}
    {%- if button_text != blank and button_url != blank -%}
      <a data-sticky-button href="{{ button_url }}" class="button sticky-button">
        {{ button_text | escape }}
        {{- 'icon-arrow.svg' | inline_asset_content -}}
      </a>
    {%- endif -%}
  {% endif %}
</div>

<script src="{{ 'section-text-with-image.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Text with image",
  "tag": "section",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-4"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image mobile"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "image_first",
          "label": "Image first"
        },
        {
          "value": "text_first",
          "label": "Text first"
        }
      ],
      "default": "image_first",
      "label": "Desktop image placement"
    },
    {
      "type": "header",
      "content": "Text content"
    },
    {
      "type": "richtext",
      "id": "badge_text",
      "label": "Badge",
      "default": "<p>Default badge</p>"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>Default heading</p>"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Default text</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Button text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button url",
      "default": "/"
    },
    {
      "type": "checkbox",
      "id": "use_sticky",
      "label": "Use sticky"
    },
    {
      "type": "image_picker",
      "id": "badge_text_image_1",
      "label": "Badge image 1"
    },
    {
      "type": "text",
      "id": "badge_text_1",
      "label": "Badge text 1",
      "default": "Default badge text"
    },
    {
      "type": "image_picker",
      "id": "badge_text_image_2",
      "label": "Badge image 2"
    },
    {
      "type": "text",
      "id": "badge_text_2",
      "label": "Badge text 2",
      "default": "Default badge text"
    },
    {
      "type": "richtext",
      "id": "bottom_text",
      "label": "Bottom text",
      "default": "<p>Bottom text</p>"
    },
    {
      "type": "text",
      "id": "rating_text",
      "label": "Rating text",
      "default": "Over 250,000 Happy Customers"
    },
    {
      "type": "header",
      "content": "Paddings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom mobile",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text with image"
    }
  ]
}
{% endschema %}