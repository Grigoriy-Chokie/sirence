<section
  class="product-stats-block"
  style="
        background-color: {{ section.settings.background_color }};
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="product-stats-block__wrapper page-width">
    {% for block in section.blocks %}
      <div class="product-stats-block__item">
        <h3 class="product-stats-block__heading">
          {{ block.settings.heading }}
        </h3>
        <p class="product-stats-block__text" style="color: {{ section.settings.text_color }};">
          {{ block.settings.text }}
        </p>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .product-stats-block {
    text-align: center;
  }

  .product-stats-block__wrapper {
    display: flex;
    gap: 4rem;
    align-items: flex-start;
  }

  .product-stats-block__item {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    justify-content: center;
    width: calc((100% - 4rem)/3);
  }

  .product-stats-block__item * {
    margin: 0;
  }

  .product-stats-block__heading {
    font-size: 2.4rem;
    font-weight: 700;
    color: transparent;
    background-image: var(--default-pink-color);
    background-clip: text;
  }

  .product-stats-block__text {
    font-size: 1.6rem;
  }

  @media (max-width: 550px) {
    .product-stats-block__heading {
      font-size: 1.6rem;
    }
    .product-stats-block__text {
      font-size: 1.2rem;
    }
  }

  @media screen and (max-width: 990px) {
    .product-stats-block {
      padding-bottom: 10px !important;
    }
  }
</style>

{% schema %}
{
  "name": "Stats block",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
        "type": "range",
        "id": "padding_top",
        "label": "Padding top",
        "min": 0,
        "max": 200,
        "step": 4,
        "default": 60,
        "unit": "px"
    },
    {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding bottom",
        "min": 0,
        "max": 200,
        "step": 4,
        "default": 60,
        "unit": "px"
    },
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat item",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading (e.g. 98% or 24hrs)"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Description text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stats block",
      "blocks": [
        {
          "type": "stat",
          "settings": {
            "heading": "98%",
            "text": "Notice increased confidence"
          }
        },
        {
          "type": "stat",
          "settings": {
            "heading": "24hrs",
            "text": "Long-lasting effect"
          }
        },
        {
          "type": "stat",
          "settings": {
            "heading": "Science",
            "text": "Backed formula"
          }
        }
      ]
    }
  ]
}
{% endschema %}
