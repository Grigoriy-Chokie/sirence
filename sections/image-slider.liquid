{{ 'section-image-slider.css' | asset_url | stylesheet_tag }}

{% liquid
  assign title = section.settings.title
  assign content = section.settings.content
  assign button_text = section.settings.button_text
  assign button_url = section.settings.button_url
  assign blocks = section.blocks
%}

{% render 'section-paddings',
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top: section.settings.padding_top_mobile,
  padding_bottom: section.settings.padding_bottom_mobile
%}

{% capture style_variables %}
  --icon-list: url('{{ section.settings.icon_list | img_url: 'master' }}')
{% endcapture %}

<div style="{{ style_variables }}" class="image-slider section-{{ section.id }}--padding gradient color-{{ section.settings.color_scheme }}">
  <div class="image-slider__wrapper page-width">
    <div class="image-slider__main">
      {% if title != blank %}
        <h2 class="h3">{{ title }}</h2>
      {% endif %}
      <div class="image-slider__content">
        {{ content }}
      </div>
      <a href="{{ button_url }}" class="button">
        {{ button_text }}
        {{- 'icon-arrow.svg' | inline_asset_content -}}
      </a>
    </div>
    <div class="image-slider__cards">
      <div class="image-slider__cards__wrapper">
        {% for block in blocks %}
          <div data-index="{{ forloop.index0 }}" style="--block-size: {{ section.blocks.size }};"
               class="image-slider__card {% if forloop.first %}image-slider__card--first {% endif %}
              {% if forloop.last %}image-slider__card--last {% endif %}">
            <div class="image-slider__card-wrapper">
              {% liquid
                assign image = block.settings.image
                assign title = block.settings.title
                assign text = block.settings.text
              %}
              {% if image != blank %}
                <div class="image-slider__card-image">
                  {{ image | image_url: width: 700 | image_tag }}
                </div>
              {% endif %}
              <div class="image-slider__card-text">
                <h3 class="h4">{{ title }}</h3>
                <p>{{ text }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      {% if section.blocks.size > 1 %}
        <div class="image-slider__navigation">
          <div data-navigation-type="prev" class="navigation-button navigation-button--back">
            {{- 'icon-arrow-slider.svg' | inline_asset_content -}}
          </div>
          <div class="image-slider__pagination">
            {% for block in blocks %}
              <span data-pagination-unit data-index="{{ forloop.index0 }}"></span>
            {% endfor %}
          </div>
          <div data-navigation-type="next" class="navigation-button navigation-button--forward">
            {{- 'icon-arrow-slider.svg' | inline_asset_content -}}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>
<script src="{{ 'section-image-slider.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Image slider",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-4"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Heading",
      "default": "Default heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Default text</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Button text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button url",
      "default": "/"
    },
    {
      "type": "image_picker",
      "id": "icon_list",
      "label": "Icon list"
    },
    {
      "type": "header",
      "content": "Paddings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top mobile",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom mobile",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "block",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Default title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Default text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image slider"
    }
  ]
}
{% endschema %}