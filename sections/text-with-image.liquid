{{ 'section-text-with-image.css' | asset_url | stylesheet_tag }}

{% liquid
  assign title = section.settings.title
  assign heading = section.settings.heading
  assign richtext = section.settings.richtext
  assign color_scheme = section.settings.color_scheme
  assign card_color_scheme = section.settings.card_color_scheme
  assign list = section.blocks | where: 'type', 'list'
%}

{% render 'section-paddings',
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top_mobile: section.settings.padding_top_mobile,
  padding_bottom_mobile: section.settings.padding_bottom_mobile
%}

<div class="section-{{ section.id }}--padding color-{{ color_scheme }}">
    <div class="image-with-text page-width">
      {% if title != blank %}
        <h2 class="h2 image-with-text__title">{{ title }}</h2>
      {% endif %}
      <div class="image-with-text__grid{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %} color-{{ card_color_scheme }}">
        <div class="image-with-text__media-item">
          <div class="image-with-text__media">
            {%- if section.settings.image != blank -%}
              {% render 'picture',
                image: section.settings.image,
                image_mobile: section.settings.image_mobile,
                media_request: 650,
                widths_list: '350,800',
                loading: 'lazy',
                fetchpriority: 'low',
                class: 'image'
              %}
            {%- else -%}
              {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
        </div>
        <div class="image-with-text__text-item">
          <div class="image-with-text__content">
            {% if heading != blank %}
              <h2 class="h3 image-with-text__heading">
                {{ heading }}
              </h2>
            {% endif %}
            {% if list.size > 0 %}
              {% for block in list %}
                {% liquid 
                  assign subtitle = block.settings.subtitle
                  assign text_size = block.settings.text_size
                %}
                <div class="image-with-text__list-content">
                  {% if subtitle != blank %}
                    <p class="image-with-text__list-subtitle">{{ subtitle }}</p>
                  {% endif %}
                  <ul class="image-with-text__list list-unstyled">
                    {% for i in (1..6) %}
                    {% liquid 
                      assign text_id = "text_" | append: forloop.index
                      assign text = block.settings[text_id]
                    %}
                    {% if text != blank %}
                      <li class="image-with-text__list-item">
                        {{ 'icon-check.svg' | inline_asset_content }}
                        <p class="text--{{ text_size }}">{{ text }}</p>
                      </li>
                    {% endif %}
                  {% endfor %}
                  </ul>
                </div>
                
              {% endfor %}
            {% endif %}
             {% if richtext != blank %}
              <div class="image-with-text__text">
                {{ richtext }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
</div>

{% schema %}
{
  "name": "Text with image",
  "tag": "section",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
