{{ 'section-subscription.css' | asset_url | stylesheet_tag }}
{% liquid 
  assign color_scheme = section.settings.color_scheme
  assign title = section.settings.title
  assign subtitle = section.settings.subtitle
  assign button_text = section.settings.button_text
  assign default_button_text = 'newsletter.button_label' | t
%}  
{% render 'section-paddings', 
  padding_top: section.settings.padding_top,
  padding_bottom: section.settings.padding_bottom,
  padding_top_mobile: section.settings.padding_top_mobile,
  padding_bottom_mobile: section.settings.padding_bottom_mobile
%}

<div class="color-{{ color_scheme }}">
  <div class="page-width section-{{ section.id }}--padding">
    <div class="subscription">

      {% if title != blank %}
        <h2 class="h2 subscription__title">{{ title }}</h2>
      {% endif %}
      {% if subtitle != blank %}
        <p class="subscription__subtitle">{{ subtitle }}</p>
      {% endif %}

      {%- form 'customer', id: 'ContactFooter', class: 'subscription-form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="subscription__field-wrapper">
          <div class="subscription__field">
            <input
              id="NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              class="subscription-field__input"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                autofocus
                aria-invalid="true"
                aria-describedby="ContactFooter-error"
              {% elsif form.posted_successfully? %}
                aria-describedby="ContactFooter-success"
              {% endif %}
              placeholder="{{ 'newsletter.placeholder' | t }}"
              required
            >
            <button
              type="submit"
              class="button subscription-form__button"
              name="commit"
              id="Subscribe"
              aria-label="{{ 'newsletter.button_label' | t }}"
            >
              <p>{{ button_text | default: default_button_text }}</p>
              {{ 'icon-subscription-arrow.svg' | inline_asset_content }}
            </button>
          </div>
        </div>
        {%- if form.errors -%}
          <h3 class="subscription-form__message form__message" id="ContactFooter-error">
            {{- form.errors.translated_fields.email | capitalize }}
            {{ form.errors.messages.email -}}
          </h3>
        {%- endif -%}
        {%- if form.posted_successfully? -%}
          <h3
            class="subscription-form__message subscription-form__message--success form__message"
            id="ContactFooter-success"
            tabindex="-1"
            autofocus
          >
          {{ 'newsletter.success' | t }}
          </h3>
        {%- endif -%}
      {%- endform -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Subscription",
  "settings": [
     {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section's space between"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 56,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 24,
      "unit": "px",
      "label": "Padding Bottom"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 40,
      "unit": "px",
      "label": "Padding Top Mobile"
    }, {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 24,
      "unit": "px",
      "label": "Padding Bottom Mobile"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    }
  ],
  "presets": [
    {
      "name": "Subscription"
    }
  ]
}
{% endschema %}